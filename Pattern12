import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);

        int n = scn.nextInt();

       int firstTerm =0;
       int secondTerm =1;

       
       for(int i =1;i<=n;i++){
           for(int j =1;j<=i;j++){
               int nextTerm = firstTerm + secondTerm;
               System .out.print(firstTerm + "	");
               firstTerm = secondTerm;
               secondTerm = nextTerm;
               
           }
           System.out.println();
       }


    }
}
