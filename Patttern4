import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        int n = scn.nextInt();
        
        for(int i = 1;i<=n;i++){//for rows
            for(int j = 1;j<=i-1;j++){//for spaces
       System.out.print("	");
        }
         for(int k = n-i+1;k>=1;k--){//for stars
          System.out.print("*	") ; 
         }
         System.out.println();
}
    }
}
