import java.util.*;

public class Main {

    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
         int n = scn.nextInt();
        
        for(int i =1;i<=n;i++){//for rows
            for(int j=1;j<=n-i;j++){//for spaces
                 System.out.print("	");
            }
            System.out.println("*	");
        }
    }
}
